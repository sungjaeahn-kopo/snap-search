-- LEAGUE 테이블 생성
CREATE TABLE `football_db`.`league` (
  `id` INT NOT NULL,
  `name` VARCHAR(45) NULL,
  `type` VARCHAR(45) NULL,
  `logo` VARCHAR(45) NULL,
  `country_id` INT NULL,
  PRIMARY KEY (`id`),
  UNIQUE INDEX `id_UNIQUE` (`id` ASC) VISIBLE
);


-- FK 생성
ALTER TABLE LEAGUE
ADD CONSTRAINT FK_COUNTRY_ID
FOREIGN KEY (COUNTRY_ID)
REFERENCES COUNTRY(ID)
ON DELETE CASCADE
ON UPDATE CASCADE ;